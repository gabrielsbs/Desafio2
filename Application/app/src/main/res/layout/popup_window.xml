<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4f4f4f">

    <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:indeterminate="true"
            android:layout_toRightOf="@+id/textMsg"
            android:layout_marginTop="6dp"/>
    <TextView
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textAlignment="center"
            android:layout_marginTop="6dp"
            android:id="@+id/textMsg"
            android:layout_marginBottom="10dp"
            android:textColor="#dddddd"
            android:text="Enviando resolução da tarefa"
          />
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_below="@+id/textMsg" android:layout_marginTop="0dp"
                  android:layout_marginBottom="10dp"
                  android:layout_centerInParent="true"
                  >
         <Button
                android:text="Ok"
                android:visibility="gone"
                android:textColor="#dddddd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button"
                android:id="@+id/cancelButton"/>
    </LinearLayout>



</RelativeLayout>